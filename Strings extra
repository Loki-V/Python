
#Challenge 80
print('Challenge 80')

name, surname = input('Enter your first name and second name.\n').split()
print(f'The length of your surname is {len(surname)} letters.')
print(name,surname)
print(f'The length of your full name (including space) is {len(name) + len(surname)} characters.\n')

#Challenge 81
print('Challenge 81')

subject = input('What is your favourite subject?\n')
for i in subject:
    print(i,end= '-')

#Challenge 82
print('Challenge 82\n')

poem = ('There was an Old Man in a tree,\nWho was horribly bored by a bee.\nWhen they said, "Does it buzz?"\nHe replied, "Yes, it does!\nIts a regular brute of a bee.')
print(poem)
start = int(input('Choose a starting point.\n'))
end = int(input('Choose an ending point.\n'))
print(poem[start:end])

#Challenge 83
print('Challenge 83')

word = input('Type in a word in uppercase.\n')
while word != word.upper():
    print('Try again')
    word = input('Type in a word in UPPERCASE.\n')
print('Thank you.')

