#Challenge 85
print('Challenge 85')

vowelcount=0
name = input('Enter your name.\n')
vowel = ['A','E','I','O','U','a','e','i','o','u']
for i in name:
    if i in vowel:
        vowelcount += 1
print(f'There are {vowelcount} vowels in your name.\n')

#Challenge 86
print('Challenge 86')

password = input('Enter in a password\n')
print('\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n')
password2 = input('Enter your password again\n')
while password != password2:
    if password.lower() == password2.lower():
        print('They must be in the same case.')
    else:
        print('Incorrect')
    password2 = input('Enter your password again\n')
print('Thank you')

#Challenge 87
print('Challenge 87')

word = input('Type a word.\n')
wordlen = len(word)
for i in range(wordlen):
    if i == 0:
        pass
    else:
        i = i * -1
        print(word[i])
print(word[0])
